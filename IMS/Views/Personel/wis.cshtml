        function insave() {

            var office = $('#mgaopis1').data('kendoComboBox').value();
            var quantity = $('#quantitywis').val();
            var item = $('#ITEMwis').data('kendoComboBox').value();
            var srcid = $('#srcidwis').data('kendoComboBox').value();
            var obj = $('#objwis').data('kendoComboBox').value();
            var unitcost = $('#unitcostwis').data('kendoNumericTextBox').value();
            var itemname = $('#ITEMwis').data('kendoComboBox').text();
            var unit = $('#unit').val();


            if (quantity == '0') {
                swal('', 'Enter quantity!', 'error');
            }
            if (item == "") {
                swal('', 'Select item first!', 'error');
            }
            if (quantity == "") {
                swal('', 'Enter quantity!', 'error');
            }
            if (srcid == "") {
                swal('', 'Please try again', 'error');
            };
            if (obj == "") {
                swal('', 'Please try again', 'error');
            };


