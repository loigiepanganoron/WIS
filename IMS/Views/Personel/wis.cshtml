                    "itemid": item,
                    "quantity": quantity,
                    "officeid": office,
                    "in_out": 'IN',
                    "descript": '',
                    "srcid": srcid,
                    "obj": obj,
                    "unitcost": unitcost,
                    "itemname": itemname,
                    "accountid": 336,
                    "tid": 37,
                    "unit": unit,
                };

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("SaveNew", "Home")',
                    data: JSON.stringify(dataload),

                    contentType: "application/json;charset=utf-8",
                    processData: true,
                    success: function (data) {

                        if (data == 1) {
                            swal('', 'Entry Successfully Save!', 'success');
                            $("#byofficewis").data("kendoGrid").dataSource.read({ officeid: office });
                            $("#outwis").data("kendoGrid").dataSource.read({ officeid: office });
                            $('#quantitywis').val('');
                            $('ITEMwis').categories.text('');
                        }
                        else {
                            swal('', data, 'error')
                        }
                    },
                })
            }
            else {
                swal('', 'Please try again!', 'error');
            }
        }

