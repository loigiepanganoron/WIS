<script>
    function getitem() {
        var selection = this.select();
        var rowData = this.dataItem(selection);
        var id = rowData.itemid;
        var unit = rowData.unit;
        var unitcost = rowData.unitcost;

        document.getElementById("unit").value = unit;
    }


    $(document).ready(function () {

        $("#qty").keypress(function (e) {
            //if the letter is not digit then display error and don't type anything
            // if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57))
            var charCode = (e.which) ? e.which : event.keyCode
            if (charCode != 46 && charCode > 31 && (charCode < 48 || charCode > 57))
            {
                //display error message
                $("#errmsg").html("Warning: Digits Only!!").show().fadeOut(500);
                return false;
            }
        });

        $("#ifilter").on("keyup", (function () {
            var value = $(this).val();
            grid = $("#plcout").data("kendoGrid");
            var orfilter = { logic: "or", filters: [] };
            if (value) {
                grid.dataSource.filter({ field: "itemname", operator: "contains", value: value });
                orfilter.filters.push({ field: "itemname", operator: "contains", value: value })
                grid.dataSource.filter(orfilter);
            } else {
                grid.dataSource.filter({});
            }
        }));


        $("#tfilter").on("keyup", (function () {
            var value = $(this).val();
            grid = $("#gridplc").data("kendoGrid");
            var orfilter = { logic: "or", filters: [] };
            if (value) {
                grid.dataSource.filter({ field: "itemname", operator: "contains", value: value });
                orfilter.filters.push({ field: "itemname", operator: "contains", value: value })
                grid.dataSource.filter(orfilter);
            } else {
                grid.dataSource.filter({});
            }
        }));


    });
