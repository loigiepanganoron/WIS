@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login_Layout.cshtml";
}

<script src="@Url.Content("~/Content/sweetalert-master/dist/sweetalert.min.js")"></script>
<link href="@Url.Content("~/Content/sweetalert-master/dist/sweetalert.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/sweetalert-master/themes/facebook/facebook.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/metroui/js/jquery/jquery.min.js")"></script>

 
<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Enter Transmittal Number</h3> 
                        </div>
                      
                    </div>
                    <div class="form-bottom">
                        <form>
                            <div class="form-group">
                                <label class="sr-only" for="form-username">Transmittal Number</label> 
                                <input type="text" name="form-username" placeholder="" class="form-username form-control" id="transnumber">
                            </div>
                          
                            <a onclick="printQR()">
                                <div style="width:100%" class="red">Print QR</div>
                            </a>
                        
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <p>Powered by: Provincial Information Management Office(PIMO)</p>
                </div>
            </div>
        </div>
    </div>
</div>
 

<script>
    function printQR()
    {
        var transnumber = $("#transnumber").val();
      
        window.open("@Url.Content("~/Reports/print_ris.aspx?repID=")" + 12 + "&transnumber=" + transnumber);
        
 
    }

</script>


<style>
    .red {
        text-align: center;
        height: 50px;
        margin: 0;
        padding: 0 20px;
        vertical-align: middle;
        background: #de615e;
        border: 0;
        font-family: 'Roboto', sans-serif;
        font-size: 16px;
        font-weight: 300;
        line-height: 50px;
        color: #fff;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        border-radius: 4px;
        text-shadow: none;
        -moz-box-shadow: none;
        -webkit-box-shadow: none;
        box-shadow: none;
        -o-transition: all .3s;
        -moz-transition: all .3s;
        -webkit-transition: all .3s;
        -ms-transition: all .3s;
        transition: all .3s;
    }

        .red:hover {
            opacity: 0.6;
            color: #fff;
            cursor: pointer;
        }
</style>
 
